<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selector_dialogue">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ci_head"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:src="@mipmap/icon_stub"
        />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ci_head"
        android:layout_alignBottom="@id/ci_head"
        android:layout_alignTop="@id/ci_head"
        android:text="用户名"
        android:gravity="center"
        android:textColor="#222"
        android:textSize="18sp"
        />

</RelativeLayout>